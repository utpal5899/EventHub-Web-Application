<script>
    $('.close').on("click", function () {
        $(this).parent('div').addClass("hideError");
    });
    // !add event listener
    $(".loginForm").submit((event) => {
        event.preventDefault();
        console.log("fwsfw")
        console.log(  
             $('.loginForm').serialize()
            
    )
        $.ajax({
            type: 'POST',
            url: '/submit/login',
            contentType:"application\json",
            data: $('.loginForm').serialize(),
            success: (response) => {
                $('.loginForm')[0].reset();
                if (response.error) {
                    $(".loginAlert").removeClass("hideError");
                    $(".adderrText").text(response.error)
                } else {
                    window.location.href = "/";
                }
            },
            error: () => {
            }
        })
    });
</script>