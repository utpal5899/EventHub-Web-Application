<!DOCTYPE html>
<html lang="en">
<!-- Head-->
<span>
    <%-include ("layout/head.ejs") -%>
</span>

<body>
    <!-- Navigation-->
    <%-include ('layout/navigation.ejs');-%>
        <!-- Page Header-->
        <header class="masthead">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1 class="mb-3">Appointment</h1>
                            <span class="">Please enter available appointment slot</span>
                        </div>
                    </div>
                </div>
        </header>
        <!-- Main Content-->
        <main class="mb-4">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="card col-md-10 col-lg-8 col-xl-7">
                        <div class="my-5">
                            <div class="post-heading col-md-10 col-lg-8 col-xl-7"
                                style=" width:100%; max-width: 650px; ">
                                <div class="alert mt-3 alert-success alert-dismissible fade loginAlert show hideError"
                                    role="alert" style="margin-bottom: 10px;">
                                    <strong class="adderrText">
                                    </strong>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close" style="color: blue;
                                background: none;
                                border: 0;">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form class="form-personal appointmentForm mt-4 mb-4" method="POST">
                                    <h3 class="form-signin-heading  mb-4">Add New Appointment Slot</h3>
                                    <div class="form-group">

                                        <label type="text" class="mt-5 label"> Date</label>
                                        <input type="date" value="" name="date" id="appointmentDate"
                                            class="input-block-level mb-2 w-100" placeholder="Date" required>
                                    </div>
                                    <div class="form-group mt-2">
                                        <label type="text" class="label" id="appointmentTime"> Time</label>
                                        <div class="timeDropDown w-50" style="display: inline-flex;">
                                            <select class="form-control w-50" name="hrs" id="hourSlot" required>
                                                <option value="">hh</option>
                                            </select>
                                            <label class="p-1">:</label>
                                            <select class="form-control w-50" name="minutes" id="minuteSlot" required>
                                                <option value="">mm</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="row mt-4 ">
                                        <div class="col-md-12 loginAlert">
                                            <button class="btn btn-large btn-primary"
                                                style="font-size: 16px;">Submit</button>
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- Footer-->
        <footer class="border-top">
            <div class="container px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <ul class="list-inline text-center">
                            <li class="list-inline-item">
                                <a href="#!">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-twitter fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-facebook-f fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#!">
                                    <span class="fa-stack fa-lg">
                                        <i class="fas fa-circle fa-stack-2x"></i>
                                        <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                    </span>
                                </a>
                            </li>
                        </ul>
                        <div class="small text-center text-muted fst-italic">Copyright &copy;Priya Sharma/8834567
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

        <script>

            $('.close').on("click", function () {
                $(this).parent('div').addClass("hideError");
            });

            // !add event listener
            $(".appointmentForm").submit((event) => {
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: "/submit/appointment",
                    data: $('.appointmentForm').serialize(),
                    success: (response) => {
                        $('.appointmentForm')[0].reset();
                        if (response.error) {
                            $(".loginAlert").removeClass("hideError");
                            $(".adderrText").text(response.error)
                        } else {
                            $(".loginAlert").removeClass("hideError");
                            $(".adderrText").text("Appointment Slot Added Successfully!!")
                        }
                    },
                    error: () => {
                    }
                })
            });

            $('#appointmentDate').change(() => {
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: "/get/availableHrSlot",
                    data: { "date": $("#appointmentDate").val() },
                    success: (response) => {
                        $("#hourSlot").html(response)
                        // $("#minuteSlot").html('<option value="00">00</option>')
                    },
                    error: () => {
                    }
                })
            });

            $(document).on('change', '#hourSlot', () => {
                event.preventDefault();
                $.ajax({
                    type: 'POST',
                    url: "/get/availableSecSlot",
                    data: { "date": $("#appointmentDate").val(), "hrs": $("#hourSlot").val() },
                    success: (response) => {
                        $("#minuteSlot").html(response)
                    },
                    error: () => {
                    }
                })
            })
        </script>
</body>

</html>